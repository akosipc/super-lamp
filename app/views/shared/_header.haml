.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{ type: "button", data: { toggle: "collapse", target: "#collapser" } }
        %span.sr-only
          = t("navigation.toggle_navigation")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to root_path, class: "navbar-brand" do
        eSports Betting Shit
    .navbar-collapse.collapse#collapser
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = link_to "Sanctuary", admin_dashboard_path
          %li
            = link_to "Log out", destroy_user_session_path, method: :delete
        - else
          %li
            = link_to "Sign Up", new_user_registration_path
          %li
            = link_to "Sign In", new_user_session_path
